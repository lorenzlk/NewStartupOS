{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto Commit and Push",
      "type": "shell",
      "command": "git add . && (git diff --cached --quiet || git commit -m 'auto commit') && git push",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
